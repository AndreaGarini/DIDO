<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.ProfileFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:id="@+id/scrollView2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0"
            tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraintLayout2"
                    android:layout_width="match_parent"
                    android:layout_height="660dp">

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="206dp"
                        android:layout_height="206dp"
                        android:layout_marginTop="24dp"
                        android:src="@drawable/cactus"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.497"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <Button
                        android:id="@+id/modificaPassword"
                        android:layout_width="330dp"
                        android:layout_height="72dp"
                        android:backgroundTint="#FFFFFF"
                        android:text="Modifica password"
                        android:textColor="#2B2B43"
                        app:cornerRadius="16dp"
                        app:icon="@android:drawable/ic_lock_idle_lock"
                        app:iconTint="#2B2B43"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.493"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/imageView"
                        app:layout_constraintVertical_bias="0.393" />

                    <Button
                        android:id="@+id/mail"
                        android:layout_width="330dp"
                        android:layout_height="72dp"
                        android:backgroundTint="#FFFFFF"
                        android:text="Mail"
                        android:textColor="#2B2B43"
                        app:cornerRadius="16dp"
                        app:icon="@android:drawable/ic_dialog_email"
                        app:iconTint="#2B2B43"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.493"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/modificaPassword"
                        app:layout_constraintVertical_bias="0.0" />

                    <Button
                        android:id="@+id/credits"
                        android:layout_width="330dp"
                        android:layout_height="72dp"
                        android:backgroundTint="#FFFFFF"
                        android:text="credits"
                        android:textColor="#2B2B43"
                        app:cornerRadius="16dp"
                        app:icon="@android:drawable/ic_dialog_info"
                        app:iconTint="#2B2B43"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.493"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/mail"
                        app:layout_constraintVertical_bias="0.0" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardView8"
                        android:layout_width="330dp"
                        android:layout_height="72dp"
                        app:cardCornerRadius="16dp"
                        app:contentPadding="10dp"
                        app:layout_constraintBottom_toTopOf="@+id/modificaPassword"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.493"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/imageView"
                        app:layout_constraintVertical_bias="1.0">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/textView5"
                                android:layout_width="66dp"
                                android:layout_height="32dp"
                                android:text="Sound"
                                android:textColor="#2B2B43"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintHorizontal_bias="0.451"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintVertical_bias="0.571" />

                            <Switch
                                android:id="@+id/switch2"
                                android:layout_width="81dp"
                                android:layout_height="48dp"
                                android:labelFor="@id/textView5"
                                android:showText="true"
                                android:splitTrack="false"
                                android:switchTextAppearance="@style/TextAppearance.AppCompat.Body1"
                                android:textOff="OFF"
                                android:textOn="ON"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintHorizontal_bias="0.827"
                                app:layout_constraintStart_toEndOf="@+id/textView5"
                                app:layout_constraintTop_toTopOf="parent" />
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/nomePerosna"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TextView"
                        app:layout_constraintBottom_toTopOf="@+id/cardView8"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/imageView" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>
        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>